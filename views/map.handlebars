<script type="text/javascript">
$('.slider').slider(
{
  formater: function(value)
  {
    var hour = value;
    var ampm = 'am';
    if(value >= 12)
    {
        hour = value -12;
        ampm = 'pm';
    }
    return 'Current Time: '+hour + ':00 '+ampm;
  }
})
  .on('slideStop', function(ev){
            var hour = ev.value;
            var ampm = 'am';

            if(ev.value >= 12)
            {
                hour = ev.value -12;
                ampm = 'pm';
            }
    document.getElementById("updateme").innerHTML = "Currently Selected Time: " + hour + ":00 "+ampm;
  });</script>



