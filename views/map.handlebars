    <script type="text/javascript">
        $(document).ready(function()
        {
            var map = new GMaps(
            {
                el: '#map',
                lat: 32.8810,
                lng: -117.2380,
                zoom: 14
            });
            map.addMarker(
            {
                lat: 32.883985, 
                lng: -117.239276,
                title: 'Hopkins',
                infoWindow:
                {
                    content: '<p id="hopkinIW">Hopkins</p>'
                },
                click: function(e)
                {
                    $.getJSON( "projected/Hopkins", function(data)
                    {
                      console.log( data );
                    })
                      .done(function(data) {
                        console.log( data );
                        document.getElementById("hopkinIW").innerHTML = data.LOT+'<br />'data.AVG;
                      })
                      .fail(function(data) {
                        console.log( data );
                      })
                      .always(function() {
                        console.log( "complete" );
                      });
                }
            });
        });

        
    </script>
